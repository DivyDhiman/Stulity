<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/margin_13"
    android:paddingEnd="@dimen/margin_13"
    android:paddingTop="@dimen/margin_13"
    android:paddingBottom="@dimen/margin_13">

    <ImageView
        android:id="@+id/cancel_txt"
        android:layout_width="@dimen/margin_25"
        android:layout_height="@dimen/margin_25"
        android:background="@drawable/close_floating_btn"
        android:padding="@dimen/margin_13"
        android:textAllCaps="true"
        android:textColor="@color/off_black"
        android:textSize="@dimen/margin_15"
        android:textStyle="bold"
        android:text="@string/cancel" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_gravity="end"
        android:background="@drawable/customborder">

        <TextView
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_13"
            android:textAllCaps="true"
            android:textColor="@color/button_bg"
            android:textSize="@dimen/margin_13"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/apply"
            android:layout_weight="1"/>

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/search_box_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_18"
        android:background="@drawable/border_blue"
        android:cursorVisible="true"
        android:padding="@dimen/margin_8"
        android:drawablePadding="@dimen/margin_8"
        android:gravity="start"
        android:imeOptions="actionDone"
        android:textColor="@color/button_bg"
        android:textColorHint="@color/off_black"
        android:textCursorDrawable="@color/button_bg"
        android:textSize="@dimen/margin_15" />

    <LinearLayout
        android:id="@+id/seekbar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <org.florescu.android.rangeseekbar.RangeSeekBar
        android:id="@+id/range_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        rsb:absoluteMaxValue="0.0"
        rsb:absoluteMinValue="0.0"/>

</LinearLayout>