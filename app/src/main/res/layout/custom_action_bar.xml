<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:theme="@style/Theme.AppCompat">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_13"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="6dp"
        app:cardMaxElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_8"
            android:paddingTop="@dimen/margin_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8">

                <ImageView
                    android:id="@+id/menu_btn"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu"
                    android:tint="@color/off_black" />

                    <ImageView
                        android:id="@+id/app_icon"
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_30"
                        android:layout_centerInParent="true"
                        android:background="@drawable/app_logo"
                        android:tint="@color/off_black" />

                <ImageView
                    android:id="@+id/filter_btn"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu"
                    android:layout_marginEnd="@dimen/margin_35"
                    android:layout_marginRight="@dimen/margin_25"
                    android:tint="@color/off_black"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/search_dashboard"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search_icon" />

                <TextView
                    android:id="@+id/save_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/button_bg"
                    android:textSize="@dimen/margin_13"
                    android:visibility="gone"/>


                <LinearLayout
                    android:id="@+id/parent_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_8"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/margin_18"
                        android:layout_height="@dimen/margin_18"
                        android:layout_gravity="center"
                        android:background="@drawable/search_icon" />

                    <EditText
                        android:id="@+id/search_et"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_13"
                        android:layout_marginStart="@dimen/margin_13"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:hint="@string/search_here"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textColor="@color/button_bg"
                        android:textColorHint="@color/refer_color"
                        android:textCursorDrawable="@color/button_bg"
                        android:textSize="@dimen/margin_13" />

                    <ImageView
                        android:id="@+id/search_result"
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/margin_25"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/search_icon" />


                    <ImageView
                        android:id="@+id/close_search"
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/margin_25"
                        android:padding="@dimen/margin_5"
                        android:src="@drawable/close_floating_btn" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.v7.widget.Toolbar>